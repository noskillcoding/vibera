# Local Development Environment Variables
# Copy this file to .env and fill in the values

# Django Secret Key (required)
SECRET=django-insecure-local-development-key-not-for-production-use-123456789

# Debug mode (True for local development)
DEBUG=True

# Database URL (leave empty for local SQLite, set for production PostgreSQL)
DATABASE_URL=

# Digital Ocean Spaces (for file uploads)
AWS_ACCESS_KEY_ID=your_digital_ocean_spaces_key
AWS_SECRET_ACCESS_KEY=your_digital_ocean_spaces_secret
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com
AWS_S3_REGION_NAME=nyc3

# Mailgun (for sending emails)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# Cloudflare (for caching and DNS)
CLOUDFLARE_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Main site hosts (comma separated)
MAIN_SITE_HOSTS=bearblog.dev,www.bearblog.dev,localhost,127.0.0.1,lh.co

# Production settings (set these for deployment)
ALLOWED_HOSTS=*
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0